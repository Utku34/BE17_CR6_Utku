{% extends 'base.html.twig' %}

{% block title %}Todo{% endblock %}

{% block body %}
    <h1>Todo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ todo.e_name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ todo.category }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ todo.e_description }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ todo.priority }}</td>
            </tr>
            <tr>
                <th>Due_date</th>
                <td>{{ todo.e_date ? todo.e_date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Create_date</th>
                <td>{{ todo.e_startdate ? todo.e_startdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_todo_crud_index') }}">back to list</a>

    <a href="{{ path('app_todo_crud_edit', {'id': todo.id}) }}">edit</a>

    {{ include('todo_crud/_delete_form.html.twig') }}
{% endblock %}
