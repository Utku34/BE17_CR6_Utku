{% extends 'base.html.twig' %}

{% block title %}Todo index
{% endblock %}

{% block body %}
	<h1>Todo index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Category</th>
				<th>Description</th>
				<th>Priority</th>
				<th>Due_date</th>
				<th>Create_date</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for todo in todos %}
				<tr>
					<td>{{ todo.id }}</td>
					<td>{{ todo.e_name }}</td>
					<td>{{ todo.category }}</td>
					<td>{{ todo.e_description }}</td>
					<td>{{ todo.priority }}</td>
					<td>{{ todo.e_date ? todo.e_date|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ todo.e_startdate ? todo.e_startdate|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_todo_crud_show', {'id': todo.id}) }}">show</a>
						<a href="{{ path('app_todo_crud_edit', {'id': todo.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_todo_crud_new') }}">Create new</a>
{% endblock %}
