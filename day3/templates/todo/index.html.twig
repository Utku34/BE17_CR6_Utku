{% extends 'base.html.twig' %} {% block title %}Hello EventController!{% endblock %} {% block body %}
<div class="container">

<div class="row">
<div class="card" style="width: 18rem;margin-bottom:15px;">
            <div class="card-body">
<div class="col-lg-12">
<label>Filter</label>
<div class="form-group">
    <select id="filter" name="filter" onchange="filter()" class="form-control">
        <option value="all">All Priority</option>
        <option value="music" {% if type=="music" %} selected {% endif %}>music</option>
        <option value="movie" {% if type=="movie" %} selected {% endif %} >movie</option>
        <option value="sport" {% if type=="sport" %} selected {% endif %}>sport</option>
        <option value="theater" {% if type=="theater" %} selected {% endif %}>theater</option>
    </select>
</div>
</div>
</div>
</div>
    <div class="row row-cols-3">
        {% for todo in todos %}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <img src="{{ asset('pictures/' ~ todo.picture) }}" alt="" width="100%">
                <h5 class="card-title">{{ todo.name }}</h5>
                <p class="card-text">{{ todo.description }}</p>
                <a href="/details/{{ todo.id }}" class="btn btn-success">Details</a>
                <a href="/edit/{{ todo.id }}" class="btn btn-warning">Edit</a>
                <a href="/delete/{{ todo.id }}" class="btn btn-danger">Delete</a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<script>
function filter(){
    // console.log($("#filter").val());
   window.location="/filter/"+$("#filter").val();
} 

</script>
{% endblock %}
